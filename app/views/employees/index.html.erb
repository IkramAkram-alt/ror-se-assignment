<div class="container">
  <h1>Employees</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Salary</th>
        <th scope="col">Position</th>
        <th scope="col">Date Of Birth</th>
        <th colspan="2" scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @employees["data"].each do |employee| %>
        <%= render partial: 'employees/employee', locals: { employee: employee } %>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= link_to 'First Page', employees_path(page: 1) %> |
    <%= link_to 'Next Page', employees_path(page: @employees["meta"]["next_page"]) if @employees["meta"]["next_page"] %> |
    <%= link_to 'Previous Page', employees_path(page: @employees["meta"]["prev_page"]) if @employees["meta"]["prev_page"] %> |
    <%= link_to 'Last Page', employees_path(page: @employees["meta"]["total_pages"]) if @employees["meta"]["total_pages"] %>
  </div>
</div>
